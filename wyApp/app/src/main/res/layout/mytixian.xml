<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eeeeee"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/topBar_bg"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的提现"
            android:textColor="@color/topBar_text_bg"
            android:textSize="18sp"/>

        <include layout="@layout/view_layout_back"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bangding_yicang"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/text_tishi"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_bangding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_one"
            android:text="绑定收款方式"
            android:textColor="#ffffff"
            android:textSize="16sp"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tixian_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="提现明细"/>

        <Button
            android:id="@+id/btn_chakan"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#4b90cb"
            android:text="查看收款方式"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp">
    </ListView>

    <TextView
        android:id="@+id/empty6"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/img_non_all"
        android:gravity="center"
        />
</LinearLayout>
