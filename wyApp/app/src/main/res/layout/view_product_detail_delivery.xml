<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_delivery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fef2ed"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapestock2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:text="配送至："/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="请选择地址"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/arrow_right"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_is_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapestock"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_is_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有货"
                android:textColor="#009744"/>

            <LinearLayout
                android:id="@+id/ll_delivery_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=",由"/>

                <TextView
                    android:id="@+id/tv_delivery_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送地方"
                    android:textColor="#4a8fc8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送。"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>