<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topBar"
        android:background="@color/topBar_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/topBar_text_bg"
            android:textSize="18sp" />



        <include layout="@layout/view_layout_back"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff" >

        <EditText
            android:id="@+id/edit_dangqianpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dip"
            android:background="@null"
            android:hint="当前密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#ffffff" >

        <EditText
            android:id="@+id/edit_newpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dip"
            android:background="@null"
            android:hint="新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
    android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#ffffff">

        <EditText
            android:id="@+id/edit_querennewpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dip"
            android:background="@null"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
       android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
		<LinearLayout 
		    android:layout_height="38dp"
		    android:orientation="vertical"
		     android:layout_weight="2"
		            android:layout_width="0dp">
        <EditText
            android:id="@+id/xiugai_code"
        android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dip"
           
            android:background="@null"
            android:hint="验证码"
            android:singleLine="true"
            android:textSize="18sp" />
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
      android:background="#eeeeee"
         />
</LinearLayout>
        <ImageView
            android:id="@+id/image_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/code"
            android:layout_weight="1"
             />
    </LinearLayout>

    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="70dp"
	    android:background="#ffffff"
	    android:paddingLeft="16dp"
	    android:paddingRight="16dp"
	    android:gravity="center"
	    >

		<Button
		    android:id="@+id/btn_xiugai"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:background="@drawable/shape_one"
		    android:text="确认修改" 
		    android:textSize="16sp"
		    android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>