<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <RelativeLayout
        android:id="@+id/layout_gift_send_bg"
        android:layout_width="180dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/live_bg_gift">

        <TextView
            android:id="@+id/textview_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:text="昵称"
            android:textColor="@color/google_yellow"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textview_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="2dp"
            android:text="送了一个月亮之我心"
            android:textColor="@color/white"
            android:textSize="12sp"/>

    </RelativeLayout>

    <com.jaronho.sdk.utils.view.CircleImageView
        android:id="@+id/imageview_sender"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/live_icon_members"/>

    <ImageView
        android:id="@+id/imageview_gift_pic"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/shouyi"/>

    <TextView
        android:id="@+id/textview_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="5dp"
        android:text="X1"
        android:textColor="@color/google_yellow"
        android:textSize="28sp"
        android:textStyle="bold"/>

</RelativeLayout>
