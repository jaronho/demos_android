<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="horizontal"
              android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/layout_cbCheck"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cbCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check"
                android:focusable="false"
                android:clickable="false"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/img_non_shop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="TextView"/>

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#ff4b00"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/text_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"/>

            <LinearLayout
                android:id="@+id/change_nmber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="数量："/>

                <LinearLayout
                    android:id="@+id/layout_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>

                    <TextView
                        android:id="@+id/dsada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="箱"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_bianji_count"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_jian_car"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/img_jianqu"/>

                    <TextView
                        android:id="@+id/text_shuliang_car"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"

                        android:maxLength="4"
                        android:text="9999"/>

                    <Button
                        android:id="@+id/btn_jia_car"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/img_add"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_xuanze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/change_number"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/amount_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应付款："/>

                <TextView
                    android:id="@+id/text_zhongshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ff4b00"
                    android:textSize="18sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/abate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/abate"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/btnDel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_shanchu"
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>