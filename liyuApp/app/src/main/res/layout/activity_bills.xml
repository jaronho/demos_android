<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_ui">

    <include layout="@layout/toolbar_layout"/>

    <View style="@style/View.Line"/>

    <com.gsclub.strategy.ui.view.CustomTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/text_gold_bea85c"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/text_gold_bea85c"
        app:tabTextColor="@color/text_grey_666666" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_def"
        android:overScrollMode="never" />

</LinearLayout>
