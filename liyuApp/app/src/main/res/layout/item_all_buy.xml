<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:background="@drawable/shape_item_all_buy_bg">

    <com.liyuu.strategy.widget.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_head"
        android:layout_toRightOf="@id/iv_head"
        android:layout_toLeftOf="@+id/tv_time"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="好好先生"
        android:textColor="@color/text_black_333333"
        android:textSize="@dimen/text_size_16"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_def"
        android:layout_alignTop="@id/tv_name"
        android:layout_alignParentRight="true"
        android:text="一分钟前"
        android:textColor="@color/text_grey_b6b6b6"
        android:textSize="@dimen/text_size_13"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_def"
        android:layout_marginTop="11dp"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:maxLines="2"
        android:text="投入1w元保证金，以1:3杠杆"/>

</RelativeLayout>
