<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/text_black_333333"
        android:textSize="@dimen/text_size_16"
        android:text="上证指数"/>

    <TextView
        android:id="@+id/tv_stock_now_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/stock_red_d64438"
        android:textSize="@dimen/text_size_18"
        android:text="3433.18"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stock_float_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:textColor="@color/stock_red_d64438"
            android:textSize="@dimen/text_size_12"
            android:text="+5.01"/>

        <TextView
            android:id="@+id/tv_stock_float_precent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/stock_red_d64438"
            android:textSize="@dimen/text_size_12"
            android:text="+0.13%"/>

    </LinearLayout>
</LinearLayout>
