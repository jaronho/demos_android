<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_flash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_flash"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageview_switch_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_switch_camera"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageview_beauty"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_beauty"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageview_white"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_white"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageview_mic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_mic_open"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageview_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_share"/>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageview_screen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_screen_full"/>

</LinearLayout>
