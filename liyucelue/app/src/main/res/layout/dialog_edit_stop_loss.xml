<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_def"
            android:paddingTop="@dimen/padding_def"
            android:text="@string/edit_stop_loss_price"
            android:textColor="@color/text_black_333333"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/v_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@mipmap/icon_close" />
    </RelativeLayout>

    <View style="@style/View.Line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_spacing_16"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_def"
                android:text="@string/now_price"
                android:textColor="@color/text_grey_666666"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_def"
                android:textColor="@color/text_grey_666666"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_def"
                android:text="@string/stop_loss_price"
                android:textColor="@color/text_grey_666666"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_def"
                android:background="@drawable/shape_grey_stroke_bg"
                android:scaleType="centerInside" />

            <EditText
                android:id="@+id/edt_stop_loss_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/iv_add"
                android:background="@drawable/shape_grey_stroke_bg"
                android:digits="0123456789."
                android:gravity="center"
                android:inputType="number"
                android:paddingLeft="@dimen/padding_def"
                android:paddingRight="@dimen/padding_def"
                android:textColor="@color/text_black_333333"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/edt_stop_loss_price"
                android:background="@drawable/shape_grey_stroke_bg"
                android:scaleType="centerInside" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_def"
                android:text="@string/margin_call"
                android:textColor="@color/text_grey_666666"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_margin_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_def"
                android:text="0.00 元"
                android:textColor="@color/text_grey_666666"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_def"
            android:layout_marginRight="@dimen/padding_def"
            android:layout_marginTop="@dimen/content_spacing_20"
            android:background="@color/ysf_grey_f7f7f7"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/content_spacing_6"
            android:paddingTop="@dimen/content_spacing_6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="亏损"
                android:textColor="@color/text_grey_999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-￥"
                android:textColor="@color/stock_red_f16262" />

            <TextView
                android:id="@+id/tv_now_cal_loss_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/stock_red_f16262" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="元"
                android:textColor="@color/stock_red_f16262" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="（跌至"
                android:textColor="@color/text_grey_999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/stock_red_f16262" />

            <TextView
                android:id="@+id/tv_now_cal_loss_precent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/stock_red_f16262" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/stock_red_f16262" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发起平仓）"
                android:textColor="@color/text_grey_999999" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/View.Line"
        android:layout_marginTop="@dimen/content_spacing_20" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_def">

        <TextView
            android:id="@+id/tv_user_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingBottom="@dimen/padding_def"
            android:paddingTop="@dimen/padding_def"
            android:textColor="@color/text_black_333333"
            android:textSize="@dimen/text_size_13" />

        <View
            style="@style/View.Line"
            android:layout_width="1px"
            android:layout_height="29dp" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="3"
            android:background="@drawable/btn_right_bottom_conner"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_def"
            android:paddingTop="@dimen/padding_def"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>


</LinearLayout>