<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="● MA5  "
                android:textColor="@color/stock_ma5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_ma5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/stock_ma5"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  ● MA10  "
                android:textColor="@color/stock_ma10"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_ma10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/stock_ma10"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  ● MA20  "
                android:textColor="@color/stock_ma20"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_ma20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/stock_ma20"
                android:textSize="10sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/optional_2_4data_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chart_load_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/load_more"
                android:textSize="@dimen/text_size_11"
                android:visibility="gone" />

            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/combinedchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </com.github.mikephil.charting.charts.CombinedChart>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_c1_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_grey_999999"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_c1_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_grey_979eaf"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_load_failed_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/load_failed_please_reload"
            android:textColor="@color/text_grey_979eaf"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_time_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/text_grey_979eaf"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_time_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/text_grey_979eaf"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_time_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_grey_979eaf"
            android:textSize="8sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/optional_1_4data_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bar_load_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/transparent"
                android:gravity="center"
                android:visibility="gone" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </com.github.mikephil.charting.charts.BarChart>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_bar_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_grey_979eaf"
            android:textSize="8sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white" />


</LinearLayout>
