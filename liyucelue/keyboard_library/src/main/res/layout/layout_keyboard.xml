<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_d8dbdf">
        <!-- 普通数字键盘样式 -->
        <com.ziyeyouhu.library.PpKeyBoardView
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/keyboard_blackground"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/btn_keyboard_key"
            android:keyTextColor="@color/text_black_333333"
            android:keyTextSize="24sp"
            android:labelTextSize="20sp"
            android:shadowColor="@color/black"
            android:shadowRadius="0.0"
            android:visibility="gone" />
        <!-- 字母键盘样式 -->
        <com.ziyeyouhu.library.PpKeyBoardView
            android:id="@+id/keyboard_view_abc_sym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color_d8dbdf"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/bg_keyboard_white"
            android:keyTextColor="@color/text_black_333333"
            android:keyTextSize="20dp"
            android:labelTextSize="15dp"
            android:shadowColor="@color/black"
            android:shadowRadius="0.0"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>